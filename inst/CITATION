citHeader("To cite the 'mapSpain' package in publications use:")

year = format(Sys.time(), "%Y")
vers = paste('R package version', meta$Version)
url = 'https://CRAN.R-project.org/package=mapSpain'
citEntry(
  entry = 'manual',
  title = paste('mapSpain:', meta$Title),
  author = "Diego Hernang√≥mez",
  year = year,
  note = vers,
  url = url,
  textVersion = paste0('Hernangomez, D. (', year, '). mapSpain: ', meta$Title, '. ', vers, '. Package url: ', url)
)
